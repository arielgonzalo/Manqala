<p id="notice"><%= notice %></p>
<div class="row">
  <div >
    <p>
      Factura - <strong><%= @invoice.id %></strong>
    </p>
  </div>
  <div >
    <p>
      <strong>Table: <%= @invoice.table.name %></strong>
    </p>
  </div>
     <div><p>
      <%= @invoice.created_at %>
    </p>
  </div>
</div>


<% @invoice_lines = InvoiceLine.find_by_sql(["SELECT * FROM INVOICE_LINES WHERE INVOICE_ID = '?'", @invoice.id]) %>

<table style="width:30%">
  <tr>
    <th>Cantidad</th>
    <th>Producto</th> 
    <th>Precio</th>
    <th>Total</th>
  </tr>
  
<% @invoice_lines.each do |line| %>
  <%product = Product.find(line.product_id)%>
<tr>
    <td><%=line.quantity%></td>
    <td><%=product.name%></td> 
    <td><%=line.unit_price%></td>
    <td><%=line.total_price%></td>
  </tr>
<% end %>
</table>
<div>
  <h5 >
    Total:<strong><%= @invoice.total %></strong>
  </h5>
    
</div>

