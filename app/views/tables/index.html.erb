<p id="notice"><%= notice %></p>

<div class="container">
  <h1>MANQALA - Mesas</h1>

  <table class="table">
    <thead>
      <tr class="column">
        <th>Mesa</th>
        <th>Exterior</th>
        <th>Ubicaci√≥n</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% @tables.each do |table| %>
        <tr >
          <td><%= table.name %></td>
          <td><%= table.is_outdoor %></td>
          <td><%= table.location %></td>
          <td><%= link_to 'Show', table %></td>
          <td><%= link_to 'Edit', edit_table_path(table) %></td>
          <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class = "row text-center align-center">
  <% table_count = 0 %>
  <% @tables.each do |table| %>

    <a href=<%=table_path(table) %> class="align-center ">
      <div class="col-xs-6 table_box  <%= table.is_outdoor ? 'outdoor' : 'indoor' %>">
        <h2><%= table.name %></h2>
      </div>
    </a>

    <% if table_count == 2 %>
      </div>
      <div class = "row text-center align-center">
      <% table_count = 0 %>  
    <% else %>
      <% table_count = table_count + 1 %>
    <% end %>  

  <% end %>
</div>
