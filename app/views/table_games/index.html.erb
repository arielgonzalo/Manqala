<p id="notice"><%= notice %></p>

<h1>Table Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Qt in use</th>
      <th>Qt in bk</th>
      <th>Penalty cost</th>
      <th>Serial</th>
      <th>Bin</th>
      <th>Dificulty level</th>
      <th>Outdoor usable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @table_games.each do |table_game| %>
      <tr>
        <td><%= table_game.name %></td>
        <td><%= table_game.description %></td>
        <td><%= table_game.qt_in_use %></td>
        <td><%= table_game.qt_in_bk %></td>
        <td><%= table_game.penalty_cost %></td>
        <td><%= table_game.serial %></td>
        <td><%= table_game.bin %></td>
        <td><%= table_game.dificulty_level %></td>
        <td><%= table_game.outdoor_usable %></td>
        <td><%= link_to 'Show', table_game %></td>
        <td><%= link_to 'Edit', edit_table_game_path(table_game) %></td>
        <td><%= link_to 'Destroy', table_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

