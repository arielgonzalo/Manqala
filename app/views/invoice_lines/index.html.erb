<p id="notice"><%= notice %></p>

<h1>Invoice Lines</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Product</th>
      <th>Pass</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Unit total price</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_lines.each do |invoice_line| %>
      <tr>
        <td><%= invoice_line.invoice %></td>
        <td><%= invoice_line.product %></td>
        <td><%= invoice_line.pass %></td>
        <td><%= invoice_line.quantity %></td>
        <td><%= invoice_line.unit_price %></td>
        <td><%= invoice_line.unit_total_price %></td>
        <td><%= invoice_line.total_price %></td>
        <td><%= link_to 'Show', invoice_line %></td>
        <td><%= link_to 'Edit', edit_invoice_line_path(invoice_line) %></td>
        <td><%= link_to 'Destroy', invoice_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

